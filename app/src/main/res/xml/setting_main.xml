<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <Preference
        android:defaultValue="@string/settings_news_from_default"
        android:key="@string/settings_news_from_key"
        android:title="@string/settings_news_from_label" />

    <Preference
        android:defaultValue="@string/settings_news_to_default"
        android:key="@string/settings_news_to_key"
        android:title="@string/settings_news_to_label" />

    <ListPreference
        android:defaultValue="@string/settings_order_by_default"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

    <ListPreference
        android:defaultValue="@string/settings_choose_section_default"
        android:entries="@array/settings_choose_section_labels"
        android:entryValues="@array/settings_choose_section_values"
        android:key="@string/settings_choose_section_key"
        android:title="@string/settings_choose_section_label" />

</PreferenceScreen>